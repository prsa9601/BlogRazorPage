<div class="page-body">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card card-table">
                    <div class="card-body">
                        <main class="page-content">
                            <div class="container">

                                <div class="modal-dialog modal-lg modal-dialog-centered modal-fullscreen-sm-down">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel8">ایجاد حساب</h5>

                                        </div>
                                        <div class="modal-body">
                                            <form method="post" enctype="multipart/form-data">

                                                <div class="modal-content">

                                                    <div class="modal-body">
                                                        <div class="row g-4">

                                                            

                                                                

                                                            <div class="col-xxl-12">

                                                                <div class="form-floating theme-form-floating">
                                                                    <input asp-for="UserName" type="text" id="Name" class="form-control">
                                                                    <label>نام کاربری</label>
                                                                </div>
                                                                <span style="visibility:hidden;" asp-validation-for="name"></span>

                                                            </div><br />
                                                            <div class="col-xxl-12">

                                                                <div class="form-floating theme-form-floating">
                                                                    <input asp-for="name" type="text" id="Name" class="form-control" >
                                                                    <label>نام </label>
                                                                </div>
                                                                <span style="visibility:hidden;" asp-validation-for="name"></span>

                                                            </div><br />

                                                            <div class="col-xxl-12">

                                                                <div class="form-floating theme-form-floating">
                                                                    <input asp-for="@Model.family" type="text" class="form-control" id="Family">
                                                                    <label>فامیلی </label>
                                                                </div>
                                                                <span style="visibility:hidden;" asp-validation-for="family"></span>

                                                            </div><br />
                                                           
                                                            @*  @Html.EditorFor(m=>m.UserNamep) *@

                                                            <div class="col-xxl-6">

                                                                <div class="form-floating theme-form-floating">
                                                                    <input asp-for="PhoneNumber" class="form-control" type="tel" id="PhoneNumber"
                                                                           maxlength="11" oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);">
                                                                    <label for="mobile">شماره تماس</label>
                                                                </div>
                                                                <span style="visibility:hidden;" asp-validation-for="@Model.PhoneNumber"></span>

                                                            </div><br />
                                                          
                                                            <div class="col-xxl-6">

                                                                <div class="form-floating theme-form-floating">
                                                                    <input asp-for="Password" class="form-control" type="password"/>
                                                                    <label>کلمه عبور</label>
                                                                </div>
                                                                <span style="visibility:hidden;" asp-validation-for="@Model.Password"></span>

                                                            </div><br />
                                                            <div class="col-xxl-6">

                                                                <div class="form-floating theme-form-floating">
                                                                    <input asp-for="ConfirmPassword" class="form-control" type="password"/>
                                                                    <label asp-for="ConfirmPassword">تکرار کلمه عبور</label>
                                                                </div>
                                                                <span style="visibility:hidden;" asp-validation-for="@Model.ConfirmPassword"></span>

                                                            </div><br />


                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-animation btn-md fw-bold"
                                                                data-bs-dismiss="modal">
                                                            بستن
                                                        </button>
                                                        <button type="submit" data-bs-dismiss="modal"
                                                                class="btn theme-bg-color btn-md fw-bold text-light">
                                                            ساخت حساب کاربری
                                                        </button>
                                                        @* <submit/> *@
                                                    </div>
                                                </div>
                                            </form>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </main>
